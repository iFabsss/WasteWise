<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/leaderboard_user_container_bg"
    android:padding="20dp"
    android:layout_marginHorizontal="30dp"
    android:layout_marginBottom="10dp"
    tools:context=".LeaderboardFragment">
    <TextView android:id="@+id/user_rank_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="#151515"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/dmsans"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/user_rank_tv"
        android:layout_centerVertical="true">
        <TextView android:id="@+id/user_username_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aleks"
            android:textColor="#151515"
            android:textSize="16sp"
            android:textFontWeight="700"
            android:fontFamily="@font/dmsans"/>

        <TextView
            android:id="@+id/user_points_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans"
            android:text="2000 ecopoints"
            android:textColor="#151515"
            android:textFontWeight="200"
            android:textSize="16sp"
            android:textStyle="italic" />
    </LinearLayout>

</RelativeLayout>